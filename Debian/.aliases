# Sprunge my output <command> | spaste and get url
alias spaste="curl -F 'sprunge=<-' http://sprunge.us"

alias lightdm="sudo lightdm"

alias cls='clear'

# some more ls aliases
alias ll='ls -alhF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias PAGER='less -r'
alias h='history 10'
alias j='jobs -l'
alias m='less'
alias md='mkdir'
alias p='pstree -p'
#alias ping='ping -vc1'
alias updt='sudo apt-get update && sudo apt-get upgrade'
alias psc='ps xawf -eo pid,user,cgroup,args'
alias cp='rsync -aP'
alias twitter='turses'

# Serial aliases
alias compi='minicom --color=on -D /dev/ttyUSB0 -b 115200 -o'
alias scrpi='sudo screen -A /dev/ttyUSB0 115200'

# Fast(er) shutdown/restart
alias haltme='sudo umount -a -t cifs && sudo shutdown -h now'
alias restart='sudo umount -a -t cifs && sudo shutdown -r now'

# Pretty-print of some PATH variables:
alias path='echo -e ${PATH//:/\\n}'
alias libpath='echo -e ${LD_LIBRARY_PATH//:/\\n}'

alias du='du -kh'    # Makes a more readable output.
alias df='df -kTh'

