macro index,pager a "<pipe-message>goobook add<return>" "add sender to google contacts"

# Dealing with URLs
macro index \cb |urlview\n 'call urlview to extract URLs out of a message'

# Ctrl-R to mark all as read
macro index \Cr \
    "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" \
    "mark all messages as read"

# Sync email
macro index O \
    "<shell-escape>offlineimap<enter>" \
    "run offlineimap to sync all mail" 
macro index o \
    "<shell-escape>offlineimap -qf INBOX<enter>" \
    "run offlineimap to sync inbox"

macro index gi \
    "<change-folder>=some.guy/INBOX<enter>" \
    "Go to inbox"
macro index ga \
    "<change-folder>=some.guy/archive<enter>" \
    "Go to all mail"
macro index gs \
    "<change-folder>=some.guy/sent<enter>" \
    "Go to Sent Mail"
macro index gd \
    "<change-folder>=some.guy/drafts<enter>" \
    "Go to Drafts"
macro index gt \
    "<change-folder>=some.guy/Trash<enter>" \
    "Go to Trash"

macro index D \
    "<save-message>+some.guy/[Gmail].Trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+some.guy/[Gmail].Spam<enter>" \
    "mark message as spam"
